<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="ftw.labels"
      tal:omit-tag="python: True">


    <div class="edit-label" tal:define="label view/get_label">

        <h2 i18n:translate="edit_label_heading">
            Edit label «<span i18n:name="label" tal:content="label/title"/>»
        </h2>

        <form class="edit-label-form" method="POST"
              tal:attributes="action string:${here/absolute_url}/labels-jar/update">
            <label id="label-title" i18n:translate="label_label_title">
                Label Title
            </label>
            <input type="text" name="title" tal:attributes="value label/title" />

            <input type="text" name="color" tal:attributes="value label/color" />

            <input type="hidden" name="label_id" tal:attributes="value label/label_id" />
            <input type="submit" value="Update" class="button standalone"
                   i18n:attributes="value button_update_label" />
        </form>

        <form class="remove-label-form" method="POST"
              tal:attributes="action string:${here/absolute_url}/labels-jar/remove">
            <input type="hidden" name="label_id" tal:attributes="value label/label_id" />
            <input type="submit" value="Delete label" class="button destructive"
                   i18n:attributes="value button_delete_label" />
        </form>

    </div>

</html>
