<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="ftw.labels"
      tal:omit-tag="python: True">


    <div class="labelingPortlet">

        <div class="activeLabels">
            <div class="labelItem" tal:repeat="label view/active_labels">
                <div tal:attributes="class string:labelColor labelcolor-${label/color}">
                  &nbsp;
                </div>
                <li class="labelTitle" tal:content="label/title" />
            </div>
        </div>

        <form class="updateLabeling" method="POST"
              tal:attributes="action string:${here/absolute_url}/labeling/update">

              <div class="labelItem" tal:repeat="label view/available_labels">
                  <div tal:attributes="class string:labelColor labelcolor-${label/color}">
                    &nbsp;
                  </div>
                  <input type="checkbox"
                         tal:attributes="name label/label_id;
                                         id string:label-${label/label_id};
                                         checked label/active" />
                  <label tal:attributes="for string:label-${label/label_id}"
                         tal:content="label/title" />
              </div>
            <input type="submit" value="Update"
                   i18n:attributes="value button_labeling_update" />
        </form>
        <div i18n:translate="labeling_manage_labels" class="toggleManageLabeling">manage labels</div>

    </div>

</html>
